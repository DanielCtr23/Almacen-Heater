<Window x:Class="Almacen_Heater.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Almacen_Heater"
        mc:Ignorable="d"
        Title="LoginDialog" Height="200" Width="200">
    <Grid Background="#323232">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="idTB" Grid.Row="1" Width="40" Background="#555" Height="20" KeyDown="idTB_KeyDown" />
        <TextBlock x:Name="NombreTB" Grid.Row="2" Width="100" Background="#555" Height="20" />
        <Button x:Name="OkBtn" Content="OK" Grid.Row="3" Height="30" Width="60" Foreground="White" Background="#333" Click="OkBtn_Click" />
    </Grid>
</Window>
